<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/pubfive"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView

                android:layout_width="25dp"
                android:layout_height="25dp"
                android:scaleType="center"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/menu"/>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chrismas"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="casual"
                android:textSize="25sp"
                android:textColor="@color/rougeone"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Line"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="casual"
                android:textSize="25sp"
                android:textColor="@color/rosetwo"/>

            <ImageView

                android:layout_width="25dp"
                android:layout_weight="1"
                android:layout_height="25dp"
                android:scaleType="center"
                android:layout_marginLeft="20dp"
                android:src="@drawable/shoppingone"/>


        </LinearLayout>


        <LinearLayout

            android:layout_width="260dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:elevation="5dp"
            android:background="@drawable/rounder_exoone"
            android:orientation="horizontal">

            <ImageView

                android:layout_width="55dp"
                android:layout_height="55dp"
                android:scaleType="center"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:src="@drawable/search"/>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Christmas"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="10sp"
                android:textColor="@color/gray"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView

                android:layout_width="35dp"
                android:layout_height="35dp"
                android:scaleType="center"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:background="@drawable/roundercircleexo5"
                android:src="@drawable/lefttone"/>

            <ImageView

                android:layout_width="170dp"
                android:layout_height="170dp"
                android:scaleType="centerInside"
                android:layout_marginTop="25dp"
                android:layout_gravity="center"
                android:src="@drawable/noel1"/>

            <ImageView

                android:layout_width="35dp"
                android:layout_height="35dp"
                android:scaleType="center"
                android:background="@drawable/roundercircleexo5"
                android:layout_marginLeft="20dp"
                android:src="@drawable/rigthone"/>
        </LinearLayout>




        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:text="Sapin de Noel 45.000 FCFA"
            android:textSize="10sp"
            android:textColor="@color/black"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:text=" Bonne Qualité Livraison rapide, à Domicile.(Qantité disponible 5)"
            android:textSize="10sp"
            android:textColor="@color/black"/>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:background="@color/rougetwo"
            android:orientation="horizontal">


            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AJOUTER AU PANIER"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="12sp" />


        </LinearLayout>

        <TextView

            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="70dp"
            android:text="Produit du meme genre"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/rose"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:elevation="1dp"
            android:orientation="horizontal">

            <ImageView

                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_marginLeft="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/noel7"/>

            <ImageView

                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:scaleType="centerCrop"
                android:src="@drawable/noel5"/>

            <ImageView

                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_marginLeft="18dp"
                android:scaleType="centerInside"
                android:src="@drawable/noel6"/>


        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="-50dp"
            android:orientation="horizontal">



            <LinearLayout

                android:layout_width="110dp"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:layout_marginTop="0dp"
                android:background="@drawable/rounderrougeexo8">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:text="35.000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:textSize="10sp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/white"
                    android:text="fcfa"/>

                <ImageView

                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="center"
                    android:layout_marginTop="55dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/coeur"/>





            </LinearLayout>


            <LinearLayout

                android:layout_width="110dp"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/rounderrougeexo8">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:text="33.000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="5dp"
                    android:text="fcfa"/>

                <ImageView

                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="center"
                    android:layout_marginTop="55dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/coeur"/>

            </LinearLayout>

            <LinearLayout

                android:layout_width="110dp"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/rounderrougeexo8">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:text="35.000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:textSize="10sp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/white"
                    android:text="fcfa"/>

                <ImageView

                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="center"
                    android:layout_marginTop="55dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/coeur"/>









            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jouet salon Noel"
                android:textColor="@color/rose"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15sp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/rose"
                android:layout_weight="1"
                android:text="Barbie-poupée"
                android:textSize="15sp" />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/rose"
                android:layout_weight="1"
                android:text="Playmobil de Noel"
                android:textSize="15sp" />




        </LinearLayout>





    </LinearLayout>



</LinearLayout>