<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:background="@drawable/canapeone"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="100dp"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:src="@drawable/back"
                />


            <ImageView
                android:id="@+id/image2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="100dp"
                android:layout_weight="1"
                android:src="@drawable/shopping"
                />


        </LinearLayout>


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Canape en cuir marron"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/white"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/rounder_siege"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textSize="12sp"
                android:text="Sièges"
                android:textColor="@color/rose"
                android:layout_marginLeft="20dp"
                />
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:orientation="horizontal">


                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Canapa en cuir marron"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="2"
                    android:textSize="15sp"
                    android:textColor="@color/blue"
                    />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30000.0 FCF"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.5"
                    android:layout_marginLeft="15dp"
                    android:textSize="15sp"
                    android:textColor="@color/rose"
                    />

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/grayone"
        android:elevation="2dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:orientation="horizontal">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="0.5"
            android:textSize="12sp"
            android:text="Votre produit"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:gravity="center"
            android:text="Quantité"
            android:textSize="12sp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="0.5"
            android:textSize="12sp"
            android:text="Prix Total"

            />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center"
            android:textSize="15sp"
            android:text="Canape en cuir"
            />

        <TextView

            android:layout_width="2dp"
            android:layout_height="30dp"
            android:textSize="15sp"
            android:background="@drawable/rounder_canape"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_weight="0.5"
            android:text="-"

            />

        <TextView

            android:layout_width="3dp"
            android:layout_height="30dp"
            android:textSize="13sp"
            android:gravity="center"
            android:layout_weight="0.5"
            android:text=" 1 "

            />

        <TextView

            android:layout_width="3dp"
            android:layout_height="30dp"
            android:textSize="15sp"
            android:background="@drawable/rounder_canape"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.5"
            android:text=" + "

            />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.5"
            android:text=" 30000.0FCF"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:background="@color/rose">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:text="AJOUTER AU PANIER"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:text="Produit du meme genre"
        />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounder_produit"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                android:layout_width="110dp"
                android:layout_height="110dp">


                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    tools:ignore="contentDescription"
                    android:scaleType="centerCrop"
                    android:src="@drawable/canapetwo"


                    />

            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:textSize="13sp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="Sièges"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Canape en cuir B "
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:textSize="11sp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Par Krawist Market"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="3dp"
                android:textSize="9sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="20000.0FCF"
                android:textSize="9sp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="10dp"/>


        </LinearLayout>


        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/rounder_produit"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                android:layout_width="110dp"
                android:layout_height="110dp">


                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    tools:ignore="contentDescription"
                    android:scaleType="centerCrop"
                    android:src="@drawable/canapethree"


                    />



            </androidx.cardview.widget.CardView>




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:textSize="13sp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="Sièges"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Canape en cuir M"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:textSize="11sp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Par Krawist Market"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="3dp"
                android:textSize="9sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="30000.0FCF"
                android:textSize="9sp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="10dp"/>


        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/rounder_produit"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                android:layout_width="110dp"
                android:layout_height="110dp">


                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    tools:ignore="contentDescription"
                    android:scaleType="centerCrop"
                    android:src="@drawable/canapefour"


                    />



            </androidx.cardview.widget.CardView>




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:textSize="13sp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="Sièges"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Canape en bois "
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:textSize="11sp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Par Krawist Market"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="3dp"
                android:textSize="9sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="20000.0FCF"
                android:textSize="9sp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="10dp"/>


        </LinearLayout>




    </LinearLayout>

</LinearLayout>